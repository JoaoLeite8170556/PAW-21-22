  <main>
    <div class = "container">
      <div class = "row">
        <div class ="col-lg-6 col-md-6 col-sm-6 container justify-content-center card">
          <h4 class = "text-center"> New Book </h4>
          <div class = "card-body">
            <form action="/books/register" method="POST">
              <div class ="form-group">
                <label for="ISBN">ISBN</label>
                <input type="text" 
                name="ISBN" 
                id="ISBN" 
                value="" 
                placeholder="ISBN Code" 
                class = "form-control"
                required>
              </div>
              
              <div class ="form-group">
                <label for="Titulo">Titulo</label>
                <input type="text" 
                name="Titulo" 
                id="Titulo" 
                value="" 
                placeholder="Livro Amarelo" 
                class = "form-control"
                required>
              </div>
              
              <div class ="form-group">
                <label for="AnoPublicacao">Ano Publicação</label>
                <input type="number" 
                name="AnoPublicacao" 
                id="AnoPublicacao" 
                value="" 
                min="1"
                max="2022"
                placeholder="19XX" 
                class = "form-control"
                required>
              </div>
              
              <div class ="form-group">
                <label for="Preco">Preco</label>
                <input type="number" 
                step="any" 
                name="Preco" 
                id="Preco" 
                value="" 
                placeholder="99.99" 
                class = "form-control"
                required>
              </div>

              <div class ="form-group">
                <label for="Editora">Editora</label>
                <input type="text" 
                name="Editora"
                 id="Editora" 
                 value="" 
                 placeholder="Porto Editora" 
                 class = "form-control"
                 required>
              </div>

              <div class ="form-group">
                <label for="Estado">Estado</label>
                <select id="Estado" name="Estado" class = "form-control">
                  <option value="" disabled selected>Selecionar</option>
                  <option value="Novo">Novo</option>
                  <option value="Usado">Usado</option>
                </select>
              </div>

              <div class ="form-group">
                <label for="Stock">Stock</label>
                <input type="number" 
                name="Stock" 
                id="Stock" 
                value="" 
                placeholder="5" 
                min="1"
                class = "form-control"
                required>
              </div>

              <div class = "box-footer">
                <button type="submit" class = "btn btn-primary">
                  Submit
                </button>
                <button onclick="location.href='/books/list'" type="button" class = "btn btn-danger">Cancel</button>
              </div>
            </form>
          
          </div>
        </div>
      </div>
