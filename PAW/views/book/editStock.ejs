<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/head.ejs'); %>
</head>

<body>
  <header>
    <%- include('../partials/header.ejs'); %>
  </header>
  <main>



    <div class = "container">
      <div class = "row">
        <div class ="col-lg-6 col-md-6 col-sm-6 container justify-content-center card">
          <h1 class = "text-center"> Change Stock Book </h1>
          <div class = "card-body">
            <form action="/books/updateStock/<%=book._id%>"  method="POST">
              <div class ="form-group">
                <input type="hidden" name="id" value="<%=book._id%>"  class = "form-control">
                <!-- <label for="Imagem">Imagem</label>
                <input type="file" name="Imagem" id="Imagem" value="<%=book.Imagem%>"> -->
              </div>
              
              <div class ="form-group">
                <label for="ISBN">ISBN</label>
                <input type="text" name="ISBN" id="ISBN" value="<%=book.ISBN%>" placeholder="ISBN Code" class = "form-control" required readonly>
              </div>
              
              <div class ="form-group">
                <label for="Titulo">Titulo</label>
                <input type="text" name="Titulo" id="Titulo" value="<%=book.Titulo%>" placeholder="Livro Amarelo" class = "form-control" required readonly>
              </div>

              <div class ="form-group">
                <label for="Stock">Stock</label>
                <input type="number" name="Stock" id="Stock" value="<%=book.Stock%>" placeholder="5" class = "form-control" min="1" required>
        
              </div>
              
              <div class = "box-footer">
                <button type="submit" class = "btn btn-primary">
                  Submit
                </button>
              </div>
            </form>
            <button type="button" onclick="location.href='/books/list'"  class = "btn btn-danger" >Cancel</button>
          </div>
        </div>
      </div>
    </div>





  </main>
  <footer>
    <%- include('../partials/footer.ejs'); %>
  </footer>
</body>

</html>