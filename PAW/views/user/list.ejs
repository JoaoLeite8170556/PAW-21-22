<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/head.ejs'); %>
   
</head>

<body>
  <header>
    <%- include('../partials/header.ejs'); %>
  </header>
  <main>
    <div class ="container">
      <div class = "row">
        <h4>Users List</h4>
      </div>
      
      <div class = "row">
        <div class = "col-lg-3">
          <a href = "/users/employee/addEmployee" class = "btn btn-primary btn-sm mb-3"> New Employee</a>
        </div>
      </div>
      <table class = "table table-striped table-bordered">
        <thead class = "table-dark">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Genero</th>
            <th>Email</th>
            <th>Role</th>
            <th>Idade</th>
            <th> Actions </th>
          </tr>
        </thead>
        
        <tbody>
          <% for(var i=0; i<users.length;i++) { %>
            <tr>
              <td>
                <%=i+1%>
              </td>
              <td>
                <%= users[i].Nome%>
              </td>
              <td>
                <%=users[i].Genero%>
              </td>
              <td>
                <%=users[i].Email%>
              </td>
              <td>
                <%=users[i].Role%>
              </td>
              <td>
                <%=users[i].Idade%>
              </td>
            <td>
              <a href = "/users/editUser/<%= users[i]._id%>"
               class = "btn btn-secondary">Edit</a>
              
              <a href = "/users/show/<%= users[i]._id%>"
               class = "btn btn-info">Details</a>

               <a href = "/users/delete/<%= users[i]._id%>"
                class = "btn btn-danger">Delete</a>
               
            </td>
          </tr>
          <% } %>
        </tbody>
      
      </table>
      
    </div>
  </main>
  <footer>
    <%- include('../partials/footer.ejs'); %>
  </footer>
</body>

</html>